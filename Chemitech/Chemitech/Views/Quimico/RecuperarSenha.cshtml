@model Chemitech.ViewModel.RecuperarSenha

@{
    ViewBag.Title = "RecuperarSenha";
    Layout = "~/Views/Shared/_LayoutQuimico.cshtml";
}

<h2 class="margen text-md-center">Enviaremos um email para alteraçao da senha </h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="container historico">
            <div class="form-group espaço1 ">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.ActionLink("Voltar", "Index", "Quimico", new { @class = "btn-cadastrar" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Recuperar senha" class="btn btn-default btn-cadastrar direito" />
            </div>
        </div>
    </div>

}
