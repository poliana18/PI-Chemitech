                            @Html.EnumDropDownListFor(model => model.TipoPericulosidade, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TipoPericulosidade, "", new { @class = "text-danger" })
                        </div>
                    </div>

