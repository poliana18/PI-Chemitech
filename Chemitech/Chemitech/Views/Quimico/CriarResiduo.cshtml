@model Chemitech.Models.Residuo

@{
    ViewBag.Title = "CriarResiduo";
    Layout = "~/Views/Shared/_LayoutQuimico.cshtml";
}

<h2 class="margen">Cadastrar residuo</h2>

@using (Html.BeginForm())
