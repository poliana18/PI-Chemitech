@model Chemitech.ViewModel.GerarGrafico

@{
    ViewBag.Title = "Bombonas";
    Layout = "~/Views/Shared/_LayoutQuimico.cshtml";
}

<h2 class="margen">Bombonas</h2>

<div class="container historico2">
    <div class="row">

        @{
            <script src="~/Scripts/highcharts.js"></script>
            <script src="~/Scripts/highcharts-more.js"></script>
            <script src="~/Scripts/exporting.js"></script>

            int id = 0;
            int qtde = 0, capacidade = 0;
            string nome = "", nomeresiduo = "", tipo = "", script = "", d2 = "";

            foreach (var bon in Model.Bombona)
            {
                if (id != 0 && id != bon.Id)
                {
                    <div class="card  borda3 mr-5 " style="width: 18rem;background-color:#42bf94">
                        <div class="card-body">
                            <h5 class="card-title">@nome (@tipo)</h5>

                            <div class="btn-group" role="group" aria-label="Exemplo básico">
                                <a href="@Url.Action("DescartarResiduo", "Quimico", new { id = id,ids = ViewBag.EmpresaSelecionada })" class="btn btn-success btn-lado">Descartar resíduo</a>
                                <div data-toggle="modal" style="cursor:pointer" data-target="#ExemploModalCentralizado@(id)" class="btn btn-success btn-lado">Visualizar resíduos</div>
                            </div>
                        </div>
                    </div>

